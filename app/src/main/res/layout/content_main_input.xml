<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".mainInput"
    tools:layout_editor_absoluteY="56dp"
    tools:showIn="@layout/activity_main_input">

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

         <TextView
             android:layout_width="fill_parent"
             android:layout_height="30dp"
             android:background="#31009688"
             android:gravity="left"
             android:textAlignment="gravity"
             android:textColor="#030403"
             android:textSize="18sp"
             app:fontFamily="sans-serif-condensed-medium"
             android:text="Select the Grade you are looking options for"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintHorizontal_bias="0.0" />

         <Spinner
             android:id="@+id/grade_spinner"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"></Spinner>

         <TextView
             android:layout_width="fill_parent"
             android:layout_height="30dp"
             android:background="#31009688"
             android:gravity="left"
             android:text="Select your interest area"
             android:textAlignment="gravity"
             android:textColor="#030403"
             android:textSize="18sp"
             app:fontFamily="sans-serif-condensed-medium"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintHorizontal_bias="0.0" />

         <ListView
             android:id="@+id/passionListView"
             android:layout_width="fill_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:choiceMode="singleChoice"
             android:divider="@color/material_blue_grey_800"
             android:dividerHeight="1dp"
             android:listSelector="@android:color/holo_green_light"
             tools:listheader="HelloJee" />
     </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>